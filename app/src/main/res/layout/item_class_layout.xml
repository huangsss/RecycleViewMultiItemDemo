<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:textColor="#666666"
        tools:text="01月09日"
        android:id="@+id/tv_date"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:id="@+id/iv_classes_cover"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="160dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="35dp"
        android:textSize="15dp"
        tools:text="银行网点效能提升转型策略综述"
        android:textColor="#282828"
        android:id="@+id/tv_classes_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#f0eff5"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="160dp"
        android:layout_marginStart="160dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="刘德华"
        android:id="@+id/tv_teacher"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:layout_marginLeft="160dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="98dp"
        android:text="待上线"
        android:textSize="10dp"
        android:gravity="center"
        android:textColor="#4b8dfa"
        android:background="@drawable/shape_stroke_blue_4b_3"
        android:id="@+id/tv_state"
        android:visibility="gone"/>

    <ProgressBar
        android:layout_width="110dp"
        android:layout_height="3dp"
        android:layout_marginTop="105dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginLeft="160dp"
        android:layout_marginStart="160dp"
        android:progressDrawable="@drawable/progress_3dp_blue"
        android:id="@+id/pb_classes"
        />

    <TextView
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textSize="12dp"
        android:textColor="#4b8dfa"
        android:layout_marginTop="95dp"
        android:gravity="center"
        android:background="@drawable/shape_back_gray_df_10"
        android:id="@+id/tv_progress"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f0eff5"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>