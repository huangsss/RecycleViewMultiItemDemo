<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/white"
android:orientation="vertical">

<LinearLayout
    android:id="@+id/saas_exam_child_answer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="9dp"
    android:layout_marginTop="9dp"
    android:visibility="visible">

    <CheckBox
        android:id="@+id/saas_exam_child_cb"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="start"
        android:layout_marginLeft="25dp"
        android:background="@drawable/cb_select_circle_saas_class"
        android:button="@null"
        android:clickable="false"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:text="A"
        android:textColor="@color/cb_check_white_gray_color"
        android:textSize="13sp"
        android:visibility="visible"
        tools:checked="false" />

    <TextView
        android:id="@+id/saas_exam_child_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:text="了解网点现状及周边情况"
        android:textColor="#282828"
        android:textSize="14dp" />
</LinearLayout>

</LinearLayout>
